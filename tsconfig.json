{
  "compilerOptions": {
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021"
    ],
    "typeRoots": [ "typings", "node_modules/@types", "solid-styled-jsx"]
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "typings/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
